{
    "version": 2,
    "paths": {
        "plugins": "/usr/lib/cocaine",
        "ipc": "/tmp/cocaine/ipc",
        "spool": "/tmp/cocaine/spool",
		"runtime": "/tmp/cocaine/runtime"
    },
    "storages": {
        "core": {
            "type": "elliptics",
            "args": {
                "nodes": {
                    "localhost": 1025
                },
                "groups": [1, 2, 3],
                "verbosity": 10
            }
        },
        "core:cache": {
            "type": "files",
            "args": {
                "path": "/tmp/cocaine/cache"
            }
        }
    },
	"services": {
        "logging": {
            "type": "logging",
            "args": {
                "port": 12501
            }
        }
    },
	"loggers": {
        "core": {
            "type": "syslog",
            "args": {
                "identity": "cocaine",
                "verbosity": "debug"
            }
        },
        "tools": {
            "type": "stdout"
        }
    }
}
